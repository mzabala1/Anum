<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_punto_fijo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="anum.sites.google.com.site.anum20172.FixedPoint"
    tools:showIn="@layout/activity_fixed_point">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:id="@+id/functionx"
                        android:text="Function(x)"/>
                    <EditText
                        android:layout_height="match_parent"
                        android:id="@+id/textfunction"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName"
                        android:hint="Expression" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:id="@+id/functionG"
                        android:text="Function(g)"/>
                    <EditText
                        android:layout_height="match_parent"
                        android:id="@+id/textfunctionG"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName"
                        android:hint="Expression G" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:id="@+id/xntextfpoint"
                        android:text="xnviewFixedPoint"/>
                    <EditText
                        android:layout_height="match_parent"
                        android:id="@+id/xnnumberfpoint"
                        android:layout_width="match_parent"
                        android:inputType="numberSigned|numberDecimal"
                        android:hint="xntextFixedPoint" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:id="@+id/toltextfpoint"
                        android:text="tolviewFixedPoint"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tolnumberfpoint"
                        android:inputType="numberSigned|numberDecimal"
                        android:hint="@string/toltextFixedPoint" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="150sp"
                        android:layout_height="match_parent"
                        android:id="@+id/itertextfpoint"
                        android:text="@string/iterviewFixedPoint"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iternumberfpoint"
                        android:inputType="numberSigned|numberDecimal"
                        android:hint="itertextFixedPoint" />
                </TableRow>
            </TableLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_weight="1"
                android:fillViewport="true">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fpoint_table">

                </TableLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fpoint_result"
                android:layout_margin="50sp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
