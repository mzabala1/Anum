<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_newtoni"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="anum.sites.google.com.site.anum20172.NewtonI"
    tools:showIn="@layout/activity_newtoni">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout">

        <TableRow>

            <TextView
                android:id="@+id/xcoord"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:text="Coordinate X" />

            <EditText
                android:id="@+id/valX"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="signed number"
                android:inputType="numberSigned|numberDecimal" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/ycoord"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:text="Coordinate Y" />

            <EditText
                android:id="@+id/valY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="signed number"
                android:inputType="numberSigned|numberDecimal" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Add Coordinate" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Delete all" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/valueText"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:padding="14dp"
                android:text="Eval value" />

            <EditText
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="value"
                android:inputType="numberSigned|numberDecimal"
                android:paddingLeft="40dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableLayout"
        android:layout_marginStart="71dp"
        android:text="Evaluate in value" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnCal"
        android:layout_below="@+id/btnCal"
        android:layout_marginStart="48dp"
        android:layout_marginTop="35dp"
        android:text=" " />

</RelativeLayout>